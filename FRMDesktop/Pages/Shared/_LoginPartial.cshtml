@using System.Security.Principal
<ul class="navbar-nav">
@if (User.Identity != null && User.Identity.IsAuthenticated)
{
        <li class="nav-item">
            <span id="current-user" class="nav-link text-dark">@User.Identity.Name</span>
        </li>
        <li class="nav-item" ng-if="notificationCount > 0">
            <a type="button" class="btn btn-secondary" asp-page="./Notifications">
                  Notifications <span class="badge badge-light">{{notificationCount}}</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign out</a>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in</a>
        </li>
}
</ul>